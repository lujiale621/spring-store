<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN "
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="src.store.mapper.ShoppingCartMapper">
    <select id="getShoppingCartByid" resultType="src.store.bean.ShoppingCart">
        SELECT * from shoppingCart where user_id = #{user_id}
    </select>
    <insert id="insertShoppingCart" parameterType="src.store.bean.ShoppingCart" >
        insert into shoppingCart values(#{id},#{user_id},#{product_id},#{num})
    </insert>
    <delete id="deletShoppingCartById" >
        delete from shoppingCart where product_id = #{product_id}
    </delete>
</mapper>