<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN "
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="src.store.mapper.OrdersMapper">
    <select id="getOrdersById" resultType="src.store.bean.Orders">
        SELECT * from orders where user_id = #{user_id}
    </select>
    <insert id="insertOrders" parameterType="src.store.bean.Orders" >
        insert into orders values(#{id},#{order_id},#{user_id},#{product_id},#{product_num},#{product_price},#{order_time})
    </insert>
    <delete id="deletOrdersById" >
        delete from orders where order_id = #{order_id}
    </delete>
</mapper>